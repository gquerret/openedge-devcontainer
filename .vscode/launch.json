    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to process",
            "type": "abl",
            "request": "attach",
            "hostname": "localhost",
            "mode": "legacy",
            "port": 3099,
            "localRoot": "${workspaceFolder}",
            "pauseOnAttach": true
            // "remoteRoot": "${workspaceFolder}",
            // "sourceMap": {
            //     "${workspaceFolder}/**": "${workspaceFolder}/**"
            // }
            //"preLaunchTask": "abl_debug"
        },
        {
            "name": "Debug program / Interactive TTY",
            "type": "abl",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "graphicalMode": false
        },
    ]
}